pipeline {
    agent any
    
    parameters {
        extendedChoice(name: 'CHOICE_PARAMETER', // The name of the parameter
                       type: 'PT_SINGLE_SELECT', // Type of parameter, PT_SINGLE_SELECT for single select dropdown
                       description: 'Select an option from the list', // Description shown to the user
                       visibleItemCount: 5, // Number of options visible at once in the dropdown
                       multiSelectDelimiter: ',', // Delimiter for multiple choice values
                       quoteValue: false, // Whether to quote the values
                       saveJSONParameterToFile: false, // Save the JSON representation of the parameter to a file
                       groovyScript: [
                           classpath: [], // Additional classpath entries
                           script: '''
                               return ['Option 1', 'Option 2', 'Option 3', 'Option 4']
                           '''
                       ]
        )
    }
    
    stages {
        stage('Build') {
            steps {
                echo "The chosen option is: ${params.CHOICE_PARAMETER}"
                // Your build steps go here
            }
        }
    }
}
