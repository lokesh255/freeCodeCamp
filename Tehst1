pipeline {
    agent any
    
    parameters {
        extendedChoice(name: 'CHECKBOX_PARAMETER', // The name of the parameter
                       type: 'PT_CHECKBOX', // Type of parameter, PT_CHECKBOX for checkbox
                       description: 'Select options from the list', // Description shown to the user
                       quoteValue: false, // Whether to quote the values
                       groovyScript: [
                           classpath: [], // Additional classpath entries
                           script: '''
                               return ['Option 1', 'Option 2', 'Option 3', 'Option 4']
                           '''
                       ]
        )
    }
    
    stages {
        stage('Build') {
            steps {
                script {
                    def selectedOptions = params.CHECKBOX_PARAMETER
                    echo "Selected options: ${selectedOptions}"
                    // Your build steps go here
                }
            }
        }
    }
}
