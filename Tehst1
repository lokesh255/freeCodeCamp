import json

def lambda_handler(event, context):
    # Parse the event data from JSON format using json.loads
    event_data = json.loads(event)
    
    # Access the user identity dictionary from the event
    user_identity = event_data.get('userIdentity', {})
    
    # Access the session context dictionary from the user identity
    session_context = user_identity.get('sessionContext', {})
    
    # Access the sessionIssuer dictionary from the session context
    session_issuer = session_context.get('sessionIssuer', {})
    
    # Now, you can access the sessionIssuer ARN and other details
    session_issuer_arn = session_issuer.get('arn', 'N/A')
    session_issuer_user_name = session_issuer.get('userName', 'N/A')
    # ... (other sessionIssuer attributes)
    
    # The rest of your Lambda function code here
